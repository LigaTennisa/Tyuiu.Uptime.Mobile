<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Authorization"
             Title="Аккаунт">
    <Shell.TitleView>
        <VerticalStackLayout>
            <Label
                Text="АВТОРИЗАЦИЯ"
                TextColor="White"
                VerticalTextAlignment="Center"
                VerticalOptions="Center"
                FontFamily="bowler"
                HeightRequest="50"
                FontSize="20"/>
        </VerticalStackLayout>
    </Shell.TitleView>

    <VerticalStackLayout Padding="0" Spacing="7" MaximumWidthRequest="200" VerticalOptions="Center">
        <Button
           x:Name="ButtonLogin"
           Text="Вход"
           TextColor="Black"
           SemanticProperties.Hint="Log in"
           Clicked="ToLogIn"
           BackgroundColor="#EF9944" BorderColor="#000000" BorderWidth="1.5"
           FontSize="Subtitle"/>

        <Button
            x:Name="ButtonReg"
            BackgroundColor="#FFFFFF"
            Text="Регистрация" 
            TextColor="Black"
            SemanticProperties.Hint="Registration"
            Clicked="ToReg"
            BorderWidth="1.5" BorderColor="#000000" FontSize="Subtitle"/>
    </VerticalStackLayout>
</ContentPage>